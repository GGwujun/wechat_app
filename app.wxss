/**app.wxss**/

.container {
  background-color: #f2f2f2;
  height: 100vh;
}

.title {
  background-color: #f2f2f2;
  padding: 30rpx 0 30rpx 50rpx;
  font-size: 28rpx;
  color: #000;
}

.tapbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 40rpx;
}

.btn-charge {
  width: 90%;
  background-color: #b9dd08;
  margin: 40rpx auto 30rpx;
  text-align: center;
}

/*清除浮动代码*/

.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.clearfix {
  zoom: 1;
}
